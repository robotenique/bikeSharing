    <tr>
      <th>Name</th>
      <th>Free slots</th>
      <th>Free bikes</th>
      <th>Company</th>
      <!-- Dealing with position -->

      <!-- Dealt -->
      <th colspan="3"></th> <!-- Changed from 3 to 5 (due to position vars) -->
