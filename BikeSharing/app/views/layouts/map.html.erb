<!DOCTYPE html>
<html>
    <head>
        <title>BikeSharing</title>
        <%= favicon_link_tag 'favicon.ico' %>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

        <!-- Map specific css and javascript -->
        <%= stylesheet_link_tag 'mapIndex/mapIndex', media: 'all' %>
        <%= javascript_include_tag 'mapIndex/mapIndex', media: 'all' %>
    </head>

    <body>
        <%= render '/devise/menu/navbar' %>
        <% if notice %>
            <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
            <p class="alert alert-danger"><%= alert %></p>
        <% end %>
        <%= yield %>
    </body>
    <script async defer src="//maps.google.com/maps/api/js?key=AIzaSyBaPMPea6wsfaG4aAfW1LCMX5CeE1rvy-0&callback=initMap"></script>
    <script async defer src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>

    <%= javascript_include_tag  'mapIndex/homepage' , media: 'all' %>
</html>
